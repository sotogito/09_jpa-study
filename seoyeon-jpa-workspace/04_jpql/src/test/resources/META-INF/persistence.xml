<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jpa_test">

        <class>com.podoseee.section01.simple.Menu</class>

        <class>com.podoseee.section02.projection.Menu</class>
        <class>com.podoseee.section02.projection.Category</class>

        <class>com.podoseee.section03.join.Menu</class>
        <class>com.podoseee.section03.join.Category</class>

        <class>com.podoseee.section04.subquery.Menu</class>
        <class>com.podoseee.section04.subquery.Category</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/menudb" />
            <property name="jakarta.persistence.jdbc.user" value="podoseee" />
            <property name="jakarta.persistence.jdbc.password" value="podoseee" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>

    <persistence-unit name="jpa_practice">

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpadb" />
            <property name="jakarta.persistence.jdbc.user" value="podoseee" />
            <property name="jakarta.persistence.jdbc.password" value="podoseee" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />

            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>

</persistence>